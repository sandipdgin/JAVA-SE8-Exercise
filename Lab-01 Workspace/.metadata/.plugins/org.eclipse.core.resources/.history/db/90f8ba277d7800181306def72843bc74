package com.acme.utils;

public class MyDate {
	/*public int day;
	public int year;
	public int month;*/
	
	// Lab08-Encapsulation start 
	private byte day;
	private byte year;
	private short month;
	// Lab08-Encapsulation end 
	

	{
		day = 1;
		year = 2000;
		month = 1;
	}

	public MyDate() {

	}

	public MyDate(int m, int d, int y) {
		// ...use the parameters of m, d and y to set the three attributes
		setDate(m, d, y);
	}

	public String toString() {
		// TODO return a string with month/day/year like “01/20/1964”
		return month + "/" + day + "/" + year;
	}

	public void setDate(int m, int d, int y) {
		// TODO set the MyDate attributes with m, d, and y values here!
		day = d;
		year = y;
		month = m;
	}

	public static void leapYears() {
		for (int i = 1752; i <= 2020; i = i + 4) {
			if ((i % 100 != 0) || (i % 400 == 0))
				System.out.println("The year " + i + " is a leap year");
		}

	}
	
	// Lab08-Encapsulation start 
	public int getDay() {
		return day;
	}

	public void setDay(int day) {
		this.day = day;
	}

	public int getYear() {
		return year;
	}

	public void setYear(int year) {
		this.year = year;
	}

	public int getMonth() {
		return month;
	}

	public void setMonth(int month) {
		this.month = month;
	}
	// Lab08-Encapsulation end 
	

}
